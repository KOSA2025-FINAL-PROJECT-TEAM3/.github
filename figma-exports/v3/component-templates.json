  "common_issues_and_solutions": {
    "api_cors_error": {
      "problem": "CORS 에러 발생",
      "solution": "Backend에서 CORS 설정 확인, 개발 시 proxy 사용"
    },
    "state_not_updating": {
      "problem": "상태가 업데이트되지 않음",
      "solution": "불변성 확인, setState의 비동기 특성 고려"
    },
    "infinite_loop": {
      "problem": "useEffect 무한 루프",
      "solution": "dependency array 올바르게 설정"
    },
    "style_not_applying": {
      "problem": "스타일이 적용되지 않음",
      "solution": "SCSS import 확인, className 오타 확인"
    },
    "websocket_connection_failed": {
      "problem": "WebSocket 연결 실패",
      "solution": "URL 확인, Backend WebSocket 설정 확인, STOMP 버전 확인"
    }
  },
